<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff">

        <ImageView

            android:id="@+id/achievementIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@null"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/achievementName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievement Name"
            android:textSize="30px"
            android:textColor="#ff000000"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/achievementIcon"
            android:layout_toLeftOf="@+id/achievementPoints"
            android:layout_alignParentBottom="false">
        </TextView>

        <TextView
            android:id="@+id/achievementDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievement Description"
            android:textSize="30px"
            android:textColor="#ff777777"
            android:layout_below="@+id/achievementName"
            android:layout_alignLeft="@+id/achievementName"
            android:layout_alignRight="@+id/achievementName" />

        <TextView
            android:id="@+id/achievementPoints"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="0 LP"
            android:textSize="30px"
            android:textColor="#ff717171"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>