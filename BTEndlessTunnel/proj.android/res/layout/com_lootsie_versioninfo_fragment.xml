<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffff2b2d">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:id="@+id/textView"
            android:layout_gravity="center|top"
            android:padding="4dp"
            android:textSize="14sp"
            android:typeface="normal"
            android:textColor="#ffffffff"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 LP"
            android:id="@+id/versionInfoPageUserPoints"
            android:layout_gravity="center|top"
            android:padding="4dp"
            android:textSize="14sp"
            android:typeface="normal"
            android:textColor="#ffffffff"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="application:"
                android:id="@+id/applicationText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="platform:"
                android:id="@+id/platformText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="device:"
                android:id="@+id/deviceText" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="firmware:"
                android:id="@+id/firmwareText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="language:"
                android:id="@+id/languageText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="country:"
                android:id="@+id/countryText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="location:"
                android:id="@+id/locationText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="idfa:"
                android:id="@+id/idfaText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="idfv:"
                android:id="@+id/idfvText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="template:"
                android:id="@+id/templateText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="notification:"
                android:id="@+id/notificationText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="nativeSDKVersion:"
                android:id="@+id/nativeSDKVersionText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="webappVersion:"
                android:id="@+id/webappVersionText" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="data cached:"
                android:id="@+id/dataCachedText" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="API URL:"
                android:id="@+id/apiURLText" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:id="@+id/versionInfoListView"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>




</LinearLayout>